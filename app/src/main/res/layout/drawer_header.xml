<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@android:color/holo_green_dark"
    android:orientation="vertical"
    >

   <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_pic_width"
        android:layout_height="@dimen/profile_pic_width"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/profile_pic_start_margin" />

  <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="@dimen/username_top_margin"
        android:layout_below="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
         style="@style/header_username"/>
